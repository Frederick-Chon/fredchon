---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  target?: string; // Ensure target is defined
  rel?: string; // Add rel to Props
};

const { href, external, underline = true, target, rel, ...rest } = Astro.props;
---

<a
  href={href}
  target={target || (external ? "_blank" : "_self")}
  rel={rel || (external ? "noopener noreferrer" : undefined)}
  class={cn(
    "inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50 text-current hover:text-black hover:dark:text-white transition-colors duration-300 ease-in-out",
    underline && "underline underline-offset-2"
  )}
  {...rest}
>
  <slot />
</a>
